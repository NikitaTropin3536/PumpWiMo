<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F2F3"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".fragments.Homefragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Your pumping!"
        android:textColor="#2B2828"
        android:textSize="40sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:text="Прокачай волю и стань сильнее!"
        android:textColor="#2B2828"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/board_card_shape_1"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Задания"
                            android:textColor="@color/colorWhite"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:text="100 интереснейших заданий \nждут вас. Вперед!"
                            android:textColor="@color/colorWhite"
                            android:textStyle="italic" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:maxHeight="100dp"
                            android:src="@drawable/quest_2" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/board_card_shape_2"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Рейтинг"
                            android:textColor="@color/colorWhite"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t2"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:text="На каком вы месте?\nВдруг на первом?"
                            android:textColor="@color/colorWhite" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:maxHeight="100dp"
                            android:src="@drawable/rating_2" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/board_card_shape_3"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/t3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Друзья"
                            android:textColor="@color/colorWhite"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:text="С друзьями веселее. \nТак заведите их поскорее!"
                            android:textColor="@color/colorWhite" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:maxHeight="100dp"
                            android:src="@drawable/friends" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/board_card_shape_4"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/t4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Награды"
                            android:textColor="@color/colorWhite"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t4"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:text="Ваши награды здесь!\nПопробуйте собрать все!"
                            android:textColor="@color/colorWhite" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:maxHeight="100dp"
                            android:src="@drawable/cup" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>