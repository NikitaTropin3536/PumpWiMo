<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/circle4"
        android:layout_alignRight="@+id/circle4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="102dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/circle1" />

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/circle3"
        android:layout_alignRight="@+id/circle3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/circle2" />

    <ImageView
        android:id="@+id/circle3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/logo"
        android:layout_alignRight="@+id/logo"
        android:src="@drawable/circle3" />

    <ImageView
        android:id="@+id/circle4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/logo"
        android:layout_alignLeft="@+id/logo"
        android:src="@drawable/circle4" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/circle_company"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/circle_company" />

    <ImageView
        android:id="@+id/ni"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ni" />

    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/company_logo" />

</RelativeLayout>