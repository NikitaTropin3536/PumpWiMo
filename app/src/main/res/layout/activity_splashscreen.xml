<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/logo_ring"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:src="@drawable/logo_ring" />

    <ImageView
        android:id="@+id/cup"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="297dp"
        android:src="@drawable/cup" />

    <ImageView
        android:id="@+id/recognition"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_alignTop="@+id/logo_ring"
        android:layout_centerInParent="true"
        android:layout_marginTop="137dp"
        android:src="@drawable/recognition_2" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/recognition"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo_line" />
</RelativeLayout>