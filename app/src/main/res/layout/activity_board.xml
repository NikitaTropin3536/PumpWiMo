<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activities.BoardActivity"
    tools:ignore="ExtraText">

    <io.ak1.BubbleTabBar
        android:id="@+id/bubbleTabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="20dp"
        android:padding="7dp"
        app:bubbletab_disabled_icon_color="#E6572A"
        app:bubbletab_horizontal_padding="20dp"
        app:bubbletab_icon_padding="2sp"
        app:bubbletab_icon_size="23dp"
        app:bubbletab_menuResource="@menu/menu"
        app:bubbletab_title_size="16sp"
        app:bubbletab_vertical_padding="13dp" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bubbleTabBar" />
</RelativeLayout>