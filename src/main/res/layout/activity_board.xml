<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board_activity_back"
    tools:ignore="MissingClass">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="50dp"
            android:src="@drawable/dos_menu"
            android:layout_height="50dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/pumpwimo_10"/>

        <Button
            android:id="@+id/guideBook"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/guide_shape"
            android:text="Гайдбук"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_1"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:cardElevation="10dp"
            android:layout_marginTop="270dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/head_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginTop="100dp"
                android:text="Задания"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/description_1"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:gravity="center_horizontal"
                android:text="108 увлекательных квестов ждут вас."
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/image_tasks" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_5"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:cardElevation="10dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/head_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="101dp"
                android:text="Рейтинг"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/description_5"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="135.5dp"
                android:layout_marginStart="3dp"
                android:gravity="center_horizontal"
                android:text="Интересно. На каком ты месте?"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/image_rating" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_2"
            android:layout_width="179.5dp"
            android:layout_height="200dp"
            app:cardElevation="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_1"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/head_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="95dp"
                android:text="Друзья"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_1" />

            <TextView
                android:id="@+id/description_2"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="134dp"
                android:gravity="center_horizontal"
                android:text="Ты хочешь с кем - то пообщаться?"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="43dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/image_friends" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_3"
            android:layout_width="180dp"
            android:layout_height="135dp"
            app:cardElevation="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_2"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/head_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="92dp"
                android:text="Избранное"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_1" />

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="43dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/image_favourites" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_6"
            android:layout_width="180dp"
            android:layout_height="202dp"
            app:cardElevation="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_5"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/head_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="95dp"
                android:text="Награды"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/description_6"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="134dp"
                android:gravity="center_horizontal"
                android:text="Поработай и получи приз"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/image_medal" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_7"
            android:layout_width="180dp"
            android:layout_height="135dp"
            app:cardElevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_6"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/head_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="92dp"
                android:text="Настройки"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_1" />

            <ImageView
                android:id="@+id/image_7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/image_settings" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>