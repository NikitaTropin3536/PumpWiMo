<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="settingsButtons">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:clickable">true</item>
<!--        <item name="android:background">@drawable/ripple_effect_settings</item>-->
        <item name="android:focusable">true</item>
    </style>

    <style name="normalText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style name="smallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">@color/colorWhite</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="notificationsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notification</item>
        <item name="colorSwitchThumbNormal">@color/colorWhite</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="privateAccountSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/private_account</item>
        <item name="colorSwitchThumbNormal">@color/colorWhite</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

</resources>